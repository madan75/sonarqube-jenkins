cluster

     sudo apt update -y
        sudo apt install curl unzip
      curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
      sudo apt install zip -y
      unzip awscliv2.zip
      sudo ./aws/install
      /usr/local/bin/aws --version
      vim ~/.bashrc
      # Add this line at the end:
      export PATH=$PATH:/usr/local/bin/
     source ~/.bashrc
     aws --version

     # Download latest stable kubectl
     curl -LO "https://dl.k8s.io/release/$(curl -Ls https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
     # Download latest kops (v1.28.0 as of June 2025)
     curl -LO https://github.com/kubernetes/kops/releases/download/v1.28.0/kops-linux-amd64
     chmod +x kubectl kops-linux-amd64
     sudo mv kubectl /usr/local/bin/
     sudo mv kops-linux-amd64 /usr/local/bin/kops
     kubectl version --client
     kops version
     aws configure

     aws s3api create-bucket \
  --bucket madan36.k8s.local \
  --region ap-southeast-1 \
  --create-bucket-configuration LocationConstraint=ap-southeast-1

     aws s3api put-bucket-versioning --bucket madan36.k8s.local --region ap-southeast-1 --versioning-configuration Status=Enabled

     export KOPS_STATE_STORE=s3://madan36.k8s.local

     kops create cluster   --name=madan36.k8s.local   --zones=ap-southeast-1a   --node-count=2   --node-size=t3.medium   --master-size=t3.medium   --dns=none   --yes
     kops get cluster
     kops update cluster --name madan36.k8s.local --yes --admin
       kops rolling-update cluster --cloudonly
     kops rolling-update cluster
     kubectl get nodes




